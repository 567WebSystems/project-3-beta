    <nav>
      <a class="logo" id="logo-link" href="/menu"><img class="logo view-appointment" src="/images/logo.png" alt="appt-logo"></a>
      <a href="/appointment"><span id="form-icon"></span>Appointment Form</a>
      <a class="logout-btn" href="/auth/logout"><span id="logout-icon"></span>Logout</a>
    </nav>
    <section class="appointment-list">
      <h1>Upcoming Events</h1>
      <section class="appointment-list">
        <table align="center" class="table-css" id="table-list">
          <thead>
            <tr>
              <th>#</th>
              <th>Event Name</th>
              <th>Event start</th>
              <th>Event End</th>
            </tr>
            <%var count = 0%>
            <% events.forEach(function (eve) { %>
              <%count++%>
            <tr>
              <td><%=count%></td>
              <td><%= eve.summary%></td>
              <td><%= eve.start%></td>
              <td><%= eve.end%></td>
              <td><a href="/appointment/view-appointment/edit/<%= eve.event_id%>"><button class="btn" onclick="edit('<%= eve.event_id %>')">Edit</button></a></td>
              <td><button class="btn" onclick="del('<%= eve.event_id%>','<%= eve.summary%>')">Delete</button></td>
            </tr>
            <% }) %>
          </thead>
        </table>
      </section>
