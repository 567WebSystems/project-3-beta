<section class="appointment-list">
  <h1>Upcoming Events</h1>
    <table class="table-css">

      <thead>
        <tr>
          <th>#</th>
          <th>Event Name</th>
          <th>Event start</th>
          <th>Event End</th>
          <th colspan="2">Manage Events</th>
        </tr>
        <%var count = 0%>
        <% events.forEach(function (eve) { %>
          <%count++%>
        <tr>
          <td><%=count%></td>
          <td><%= eve.summary%></td>
          <td><%= eve.start%></td>
          <td><%= eve.end%></td>
          <td><a href="/appointment/view-appointment/update/<%= eve._id%>"><input type="submit" class="btn" value="Edit"/></a></td>
          <td><input type="submit" class="btn" onclick="del('<%= eve.event_id%>','<%= eve.summary%>')" value="Delete"/></td>
        </tr>
        <% }) %>
      </thead>
    </table>
  </section>

