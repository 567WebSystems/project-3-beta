<title>Appointment Update</title>

<meta name="google-signin-client_id" content="351815199905-7866h3vhn4lrd4qbe8bk0l8sej8qdaj2.apps.googleusercontent.com">
<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />

<nav>
  <a class="logo" id="logo-link" href="/menu"><img class="logo view-appointment" src="/images/logo.png" alt="appt-logo"></a>
  <a href="/appointment/view-appointment"><span id="view-appointment"></span>View Appointments</a>
  <a class="logout-btn" href="/auth/logout"><span id="logout-icon"></span>Logout</a>
</nav>

<main>

    <%var count = 0%>
        <% event.forEach(function (eve) { %>
          <%count++%>

    <h1>Update Appointment <%= eve.summary %></h1>
    
  <form id="appointmentForm" method="post" action="/appointment/view-appointment" onsubmit="return formValidation()">

      <ol>
        <li id="mongoID"><label>mongoid:</label><input type="text" id="mongoID" name="mongoID" value="<%= eve._id %>"></li>
        
        <li id="eventID"><label>id:</label><input type="text" id="eventID" name="eventID" value="<%= eve.event_id %>"></li>
        
        <li><label for="summary    ">Event Name </label><input type="text" id="summary" name="summary" value="<%= eve.summary %>"></li>
        
        <li><label for="location   ">Location   </label><input type="text" id="location" name="location" value="<%= eve.location %>"></li>

        <li><label for="description">Description</label><input type="text" id="description" name="description" value="<%= eve.description %>"></li>
       
        <li><label for="startDate  ">Start Date </label><input type="date" id="startDate" name="startDate"></li>
        
        <li><label for="endDate    ">End Date   </label><input type="date" id="endDate" name="endDate"></li>
       
        <li><label for="startTime  ">Start Time </label><input type="time" id="startTime" name="startTime"></li>

        <li><label for="endTime    ">End Time   </label><input type="time" id="endTime" name="endTime"></li>

        <li><label for="recurrence ">Recurrence </label><input type="number" id="recurrence" name="recurrence"></li>

        <li><label for="attendees  ">Email      </label><input type="text" id="attendees" name="attendees"></li>

        <li><label for="reminders  ">Notes      </label><input type="text" id="reminders" name="reminders"></li>

        <span id="error"></span>

        <li><label for="submit">Update</label><input type="submit" value="Update" /></li>
      </ol>
    </form>
    <% }) %>

</main>

  <script rel="javascripts" src="/javascripts/scripts.js"></script>
