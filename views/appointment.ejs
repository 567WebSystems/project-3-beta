<main>

  <h2>Appointment Form</h2>

    <form id="appointmentForm" method="post" action="/appointment/appt-success" onsubmit="return formValidation()">

      <ol>
          <li><label for="summary    ">Event Name </label><input type="text" id="summary" name="summary"></li>
        
          <li><label for="location   ">Location   </label><input type="text" id="location" name="location"></li>
        
          <li><label for="description">Description</label><input type="text" id="description" name="description"></li>
        
          <li><label for="startDate  ">Start Date </label><input type="date" id="startDate" name="startDate"></li>
        
          <li><label for="endDate    ">End Date   </label><input type="date" id="endDate" name="endDate"></li>
        
          <li><label for="startTime  ">Start Time </label><input type="time" id="startTime" name="startTime"></li>
        
          <li><label for="endTime    ">End Time   </label><input type="time" id="endTime" name="endTime"></li>
        
          <li><label for="recurrence ">Recurrence </label><input type="number" id="recurrence" name="recurrence"></li>
        
          <li><label for="attendees  ">Email      </label><input type="text" id="attendees" name="attendees"></li>
        
          <li><label for="reminders  ">Notes      </label><input type="text" id="reminders" name="reminders"></li>

          <span id="error"></span>

          <li><label for="submit">Submit</label><input type="submit" value="Submit" /></li>
    </ol>
      
    </form>

</main>

